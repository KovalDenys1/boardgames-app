# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_ID.supabase.co:5432/postgres

# Supabase (for client-side features, optional)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your_supabase_anon_key

# Authentication
JWT_SECRET=your-jwt-secret-key-min-32-characters
NEXTAUTH_SECRET=your-nextauth-secret-key-min-32-characters
NEXTAUTH_URL=https://your-app.vercel.app

# Email Service (Resend)
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM="Boardly <noreply@boardly.online>"

# OAuth Providers (optional)
# Google OAuth - Get from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth - Get from https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Socket.io Server URL (from Render)
NEXT_PUBLIC_SOCKET_URL=https://your-socket-server.onrender.com

# Server Config (for local dev and Render)
PORT=3001
NODE_ENV=production
HOSTNAME=0.0.0.0
CORS_ORIGIN=https://your-app.vercel.app
